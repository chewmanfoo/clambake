<h2>New budget</h2>

<%= error_messages_for :budget %>

<% form_for(@budget) do |f| %>
  <p>
    <b>Name it:</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Now put in some notes about it:</b><br />
    <%= f.text_area :note, :rows => 6, :cols => 56 %>
  </p>

  <p>
    <b>Which Payday?</b><br />
    <select name="budget[payday_id]">
      <% @paydays.each do |payday| %>
        <option value="<%=payday.id %>">
          <%= ' selected' if payday.id == @budget.payday_id %>
          <%= payday.name %>
        </option>
      <% end %>
    </select>
  </p>

  <fieldset>
    <legend>Debts</legend>
    <br />
    <div id="debts_id">
      <%= render :partial => 'debt' %>
      <%= render :partial => 'debt' %>
      <%= render :partial => 'debt' %>
    </div> <!-- end of div id="debts_id" -->
    <%= add_debt_link 'Add another debt' %>

  </fieldset>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', budgets_path %>
