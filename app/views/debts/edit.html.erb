<h1>Editing debt "<%= h @debt.name %>"</h1>

<%= error_messages_for :debt %>

<% form_for(@debt) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Note</b><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <b>Type</b><br />
    <select name="debt[debt_type_id]">
    <% @dtypes.each do |type| %>
      <option value="<%=type.id %>"
        <%= ' selected' if type.id == @debt.debt_type_id %>>
        <%= type.name %>
    </option>
    <% end %>
    </select>
  </p>

  <p>
    <b>Company</b><br />
    <select name="debt[company_id]">
    <% @companies.each do |company| %>
      <option value="<%=company.id %>"
        <%= ' selected' if company.id == @debt.company_id %>>
        <%= company.name %>
    </option>
    <% end %>
    </select>
  </p>

  <p>
    <b>Payday</b><br />
    <select name="debt[payday_id]">
    <% @paydays.each do |payday| %>
      <option value="<%=payday.id %>"
        <%= ' selected' if payday.id == @debt.payday_id %>>
        <%= payday.name %>
    </option>
    <% end %>
    </select>
  </p>

  <p>
    <b>Total Due</b><br />
    <%= f.text_field :total_due %>
  </p>

  <p>
    <b>Minimum Due (per period)</b><br />
    <%= f.text_field :min_due %>
  </p>
          
  <p>
    <b>Due Day</b><br />
    <%= f.text_field :due_day %>
  </p>

  <p>
    <b>APR</b><br />
    <%= f.text_field :apr %>%
  </p>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', debts_path %>
