<h1>Editing goal</h1>

<%= error_messages_for :goal %>

<% form_for(@goal) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @goal %> |
<%= link_to 'Back', goals_path %>
